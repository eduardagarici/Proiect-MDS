<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.mdsapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ReservationPage">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".Checkout" />
        <activity android:name="com.example.user.mdsapplication.ui.activities.SplashActivity"
                  android:theme="@style/AppTheme.NoActionBar.Splash"/>
        <activity android:name=".SpecialMentions"/>
        <activity
            android:name="com.example.user.mdsapplication.ui.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.user.mdsapplication.ui.activities.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.user.mdsapplication.ui.activities.ChatActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.activities.UserListingActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>